@page "/"
@inherits Library.CommonBlazorBase

<PageTitle>Index</PageTitle>

@if (ListData.Any()==false)
{
    <LoadingIndicator />
}
else
{

<h1>Select group</h1>

<div class="row">
  <div class="col col-lg-6 col-auto">
    <div class="border rounded bg-secondary bg-opacity-10 m-0 p-3 shadow">
@foreach (var item in ListData)
{
    @if (item.order_num < 100)
    {
        <a class="btn btn-outline-primary rounded m-2 shadow" href="/GroupThreads/@item.id">@item.group_name</a>
    }
    else
    {
        <a class="btn btn-outline-info rounded m-2 shadow" href="/GroupThreads/@item.id">@item.group_name</a>
    } 
}
    </div>
  </div>
</div>

}